<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dechproduct.hotelreservationapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-feature android:name="android.hardware.camera.any" />

    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name=".core.HotelManagementApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HotelReservationApp"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".presentation.checkinWalk.CheckInWalkInActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.checkinDetail.CheckinDetailActivity"
            android:exported="false"
            android:theme="@style/Theme.HotelReservationApp" />
        <activity
            android:name=".presentation.checkout.CheckOutActivity"
            android:exported="false"
            android:theme="@style/Theme.HotelReservationApp" />
        <activity
            android:name=".presentation.checkin.CheckInActivity"
            android:exported="false"
            android:theme="@style/Theme.HotelReservationApp" />
        <activity
            android:name=".presentation.reservation.add.camera.CameraActivity"
            android:exported="false"
            android:theme="@style/Theme.HotelReservationApp" />
        <activity
            android:name=".presentation.reservation.search.SearchReservationActivity"
            android:theme="@style/Theme.HotelReservationApp" />
        <activity
            android:name=".presentation.reservation.add.AddReservationActivity"
            android:theme="@style/Theme.HotelReservationApp" />
        <activity
            android:name=".presentation.reservation.ReservationMenuActivity"
            android:theme="@style/Theme.HotelReservationApp" />
        <activity
            android:name=".presentation.menu.MenuActivity"
            android:theme="@style/Theme.HotelReservationApp" />
        <activity
            android:name=".presentation.SplashActivity"
            android:exported="true"
            android:theme="@style/Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.login.LoginActivity"
            android:theme="@style/Theme.HotelReservationApp" />
    </application>

</manifest>