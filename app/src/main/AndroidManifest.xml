<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dechproduct.hotelreservationapp" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.example.dechproduct.hotelreservationapp.presentation.reservation.search.NewsApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HotelReservationApp" >

        <activity
            android:name="com.example.dechproduct.hotelreservationapp.presentation.reservation.search.SearchReservationActivity" />
        <activity
            android:name="com.example.dechproduct.hotelreservationapp.presentation.reservation.add.AddReservationActivity"
            android:theme="@style/Theme.HotelReservationApp" />
        <activity
            android:name="com.example.dechproduct.hotelreservationapp.presentation.reservation.ReservationMenuActivity"
            android:theme="@style/Theme.HotelReservationApp" />
        <activity
            android:name="com.example.dechproduct.hotelreservationapp.presentation.menu.MenuActivity"
            android:theme="@style/Theme.HotelReservationApp" />
        <activity
            android:name="com.example.dechproduct.hotelreservationapp.presentation.menu.unused.deprecated_MenuActivity"
            android:theme="@style/Theme.HotelReservationApp" />
        <activity
            android:name="com.example.dechproduct.hotelreservationapp.presentation.SplashActivity"
            android:exported="true"
            android:theme="@style/Splash" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.dechproduct.hotelreservationapp.presentation.login.LoginActivity"
            android:theme="@style/Theme.HotelReservationApp" />
    </application>

</manifest>